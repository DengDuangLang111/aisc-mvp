{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "entryFile": "main",
  "exec": {
    "binaryPath": "node",
    "scriptPath": "dist/apps/api/src/main"
  },
  "compilerOptions": {
    "deleteOutDir": true,
    "tsConfigPath": "tsconfig.build.json",
    "assets": ["**/*.json"],
    "watchAssets": true
  }
}
